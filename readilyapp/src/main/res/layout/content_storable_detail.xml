<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/content_storable_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_storable_detail"
        tools:context="com.infmme.readilyapp.StorableDetailActivity">

    <TextView
            android:text="@string/just_sample"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/storable_detail_current_part"
            app:layout_constraintLeft_toRightOf="@+id/storable_detail_current_part_prefix"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/storable_detail_current_part_prefix"
            app:layout_constraintRight_toRightOf="@+id/content_storable_detail"
            android:layout_marginRight="16dp" android:layout_marginEnd="16dp"/>

    <TextView
            android:text="@string/author_prefix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/storable_detail_author_prefix"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:textStyle="normal|bold"
            app:layout_constraintLeft_toLeftOf="@+id/content_storable_detail"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/storable_detail_description"
            android:layout_marginTop="8dp"/>
    <TextView
            android:text="@string/just_sample"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/storable_detail_author"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            app:layout_constraintLeft_toRightOf="@+id/storable_detail_author_prefix"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/storable_detail_author_prefix"
            app:layout_constraintRight_toRightOf="@+id/content_storable_detail"
            android:layout_marginRight="16dp" android:layout_marginEnd="16dp"/>
    <TextView
            android:text="@string/description_prefix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/storable_detail_description_prefix"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:textStyle="normal|bold"
            app:layout_constraintLeft_toLeftOf="@+id/content_storable_detail"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/storable_detail_title"
            android:layout_marginTop="8dp"/>
    <TextView
            android:text="@string/just_sample"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/storable_detail_description"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            app:layout_constraintLeft_toLeftOf="@+id/content_storable_detail"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/storable_detail_description_prefix"
            android:layout_marginTop="8dp"
            app:layout_constraintRight_toRightOf="@+id/content_storable_detail"
            android:layout_marginRight="16dp" android:layout_marginEnd="16dp"/>
    <TextView
            android:text="@string/genre_prefix"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/storable_detail_genre_prefix"
            android:textStyle="normal|bold"
            app:layout_constraintLeft_toLeftOf="@+id/content_storable_detail"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/storable_detail_author"
            android:layout_marginTop="8dp"/>
    <TextView
            android:text="@string/just_sample"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/storable_detail_genre"
            app:layout_constraintLeft_toRightOf="@+id/storable_detail_genre_prefix"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/storable_detail_genre_prefix"
            app:layout_constraintRight_toRightOf="@+id/content_storable_detail"
            android:layout_marginRight="16dp" android:layout_marginEnd="16dp"/>
    <TextView
            android:text="@string/language_prefix"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/storable_detail_language_prefix"
            android:textStyle="normal|bold"
            app:layout_constraintLeft_toLeftOf="@+id/content_storable_detail"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/storable_detail_genre"
            android:layout_marginTop="8dp"/>
    <TextView
            android:text="@string/just_sample"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/storable_detail_language"
            app:layout_constraintLeft_toRightOf="@+id/storable_detail_language_prefix"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/storable_detail_language_prefix"
            app:layout_constraintRight_toRightOf="@+id/content_storable_detail"
            android:layout_marginRight="16dp" android:layout_marginEnd="16dp"/>
    <TextView
            android:text="@string/part_prefix"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/storable_detail_current_part_prefix"
            android:textStyle="normal|bold"
            app:layout_constraintLeft_toLeftOf="@+id/content_storable_detail"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/storable_detail_language"
            android:layout_marginTop="8dp"/>
    <TextView
            android:text="@string/file_prefix"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/storable_detail_file_prefix"
            app:layout_constraintLeft_toLeftOf="@+id/content_storable_detail"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/storable_detail_current_part"
            android:layout_marginTop="8dp"/>
    <TextView
            android:text="@string/just_sample"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/storable_detail_file"
            android:typeface="monospace"
            app:layout_constraintLeft_toRightOf="@+id/storable_detail_file_prefix"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/storable_detail_file_prefix"
            app:layout_constraintRight_toRightOf="@+id/content_storable_detail"
            android:layout_marginRight="16dp" android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/content_storable_detail"
            android:layout_marginBottom="16dp"/>
    <TextView
            android:text="@string/title_prefix"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/storable_detail_title_prefix"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:textStyle="normal|bold"
            app:layout_constraintLeft_toLeftOf="@+id/content_storable_detail"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/content_storable_detail"
            android:layout_marginTop="16dp"/>
    <TextView
            android:text="@string/just_sample"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/storable_detail_title"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            app:layout_constraintLeft_toRightOf="@+id/storable_detail_title_prefix"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/storable_detail_title_prefix"
            app:layout_constraintRight_toRightOf="@+id/content_storable_detail"
            android:layout_marginRight="16dp" android:layout_marginEnd="16dp"/>


</android.support.constraint.ConstraintLayout>
