<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/content_storable_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_storable_detail"
        tools:context="com.infmme.readilyapp.StorableDetailActivity">

    <ImageView android:layout_width="300dp"
               android:layout_height="300dp"
               android:id="@+id/storable_detail_image_view"
               android:transitionName="@string/storable_detail_transition"
               android:scaleType="centerCrop"
               android:background="@color/accent"/>

</android.support.constraint.ConstraintLayout>
